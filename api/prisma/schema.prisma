// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model users {
    id         Int      @id @default(autoincrement())
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    username   String  @unique
    email      String
    first_name String?
    last_name  String?
    user1      rooms[] @relation("userLink1")
    user2      rooms[] @relation("userLink2")
}

model rooms {
    id         Int      @id @default(autoincrement())
    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    userLink1 users @relation("userLink1", fields: [user1], references: [id])
    user1     Int
    userLink2 users @relation("userLink2", fields: [user2], references: [id])
    user2     Int
}
